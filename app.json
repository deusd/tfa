{
  "name": "tfa",
  "description": "The fellowship app config",
  "scripts": {},
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "FACEBOOK_KEY": {
      "required": true
    },
    "FACEBOOK_SECRET": {
      "required": true
    },
    "GOOGLE_JS_AUTOCOMPLETE": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "S3_ASSET_URL": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "STAGING_PIPELINE": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "logentries",
    "heroku-postgresql",
    "rediscloud"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-ruby.git"
    }
  ]
}

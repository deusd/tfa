.establishment-show
  .row.align-center
    .columns.small-12.medium-9
      .row.columns.cover-container
        .cover-picture
          = image_tag "establishments/church-placeholder", width: "100%"
        .profile-picture
          = image_tag "establishments/church-placeholder-profile", width: "100%"
        .profile-title
          = @establishment.name
        .cover-header
          .row.align-right
            .columns.small-6.no-pad-right.z-index-10
              .establishment-phone
                %i.fa.fa-phone
                %span.phone-text
                  = react_component "EstablishmentPhoneContainer"
            .columns.small-4.medium-2.no-pad-sides.z-index-9
              .hollow.secondary.expanded.button.top-button
                %i.fa.fa-home
                Join 
            .columns.small-4.medium-2.no-pad-sides.z-index-8
              .hollow.secondary.expanded.button.top-button
                %i.fa.fa-bookmark-o
                Bookmark
            .columns.small-4.medium-2.no-pad-left
              .icon-block
                %i.fa.fa-share-square-o
                %i.fa.fa-envelope-o
                %i.fa.fa-usd
      .row
        .columns.small-12.medium-6
          .map-container
            .map-header
              = @establishment.location.address
            = react_component "EstablishmentMapContainer"
          .service-container
            .service-header.white-block-header
              Service Times
            - @establishment.service_times.each do |service|
              .service-entry
                .row
                  .columns.small-6
                    %span.service-day
                      = service.day+":"
                    %span.serivce-time
                      = service.start_time
                  .columns.small-6
                    %span.service-name
                      %span.service-type
                        Type:
                      = service.service_name
            
          .widget-container
            %img{ src: "http://placehold.it/420x300/DDD?text=Photos", width: "100%" }
          .widget-container
            %img{ src: "http://placehold.it/420x350/DDD?text=Giving", width: "100%" }
        .columns.small-12.medium-6
          .about-container
            .about-header.white-block-header
              About us
            .about-content
              = @establishment.description
          .widget-container
            %img{ src: "http://placehold.it/420x200/DDD?text=Members", width: "100%" }
          .widget-container
            %img{ src: "http://placehold.it/420x400/DDD?text=Livestreamers", width: "100%" }
          .widget-container
            %img{ src: "http://placehold.it/420x200/DDD?text=Calendars", width: "100%" }

    .columns.medium-3
      .row.hide-for-small-only.side-ads
        .columns.small-12
          %img{ src: "http://placehold.it/260x180/DDD?text=Ad+goes+here!", width: "100%", height: "100%" }
        .columns.small-12
          %img{ src: "http://placehold.it/260x180/DDD?text=Ad+goes+here!", width: "100%", height: "100%" }
        .columns.small-12
          %img{ src: "http://placehold.it/260x180/DDD?text=Ad+goes+here!", width: "100%", height: "100%" }

      .widget-container
        %img{ src: "http://placehold.it/420x150/DDD?text=Blogs", width: "100%" }


%p
  %strong Description:
  %br
- if @establishment.description.present?
  = @establishment.description.html_safe

- if @establishment.admin_phone.present?
  %p
    %strong Admin phone:
    %br
    = @establishment.admin_phone
- if @establishment.email.present? 
  %p
    %strong Email:
    %br
    = @establishment.email
- if @establishment.admin_email.present? 
  %p
    %strong Admin email:
    %br
    = @establishment.admin_email
%p
  %strong Profile Image:
  %br
  - if @establishment.profile_image.processed
    = image_tag @establishment.profile_image.graphic_url(:smedium).to_s, alt: "Profile image of #{@establishment.name}"
  - else
    %em Processing image...
%p
  %strong Banner Image:
  %br
  - if @establishment.banner_image.processed
    = image_tag @establishment.banner_image.graphic_url(:large).to_s, alt: "Banner image of #{@establishment.name}"
  - else
    %em Processing image...

%div
  = render "social/social_link_list"

= link_to 'Staff', establishment_staff_index_path(@establishment)
|
= link_to 'Edit', edit_establishment_path(@establishment)
|
= link_to 'Back', establishments_path
